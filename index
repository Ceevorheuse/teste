    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Fun칞칚o para trocar entre Login e Cadastro
        function switchModal(hideId, showId) {
            const hideModal = bootstrap.Modal.getInstance(document.getElementById(hideId));
            hideModal.hide();
            const showModal = new bootstrap.Modal(document.getElementById(showId));
            showModal.show();
        }

        // L칩gica de LOGIN via AJAX
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);

            fetch('auth.php', { method: 'POST', body: formData })
            .then(res => res.json())
            .then(data => {
                if(data.status === 'success') {
                    location.reload(); // Recarrega para mostrar logado
                } else {
                    document.getElementById('loginError').innerText = data.message;
                }
            });
        });

        // L칩gica de CADASTRO via AJAX
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);

            fetch('auth.php', { method: 'POST', body: formData })
            .then(res => res.json())
            .then(data => {
                if(data.status === 'success') {
                    location.reload(); // Recarrega j치 logado
                } else {
                    document.getElementById('registerError').innerText = data.message;
                }
            });
        });

        // Fun칞칫es de Like e Publish (mesmas de antes)
        function toggleLike(btn) {
            const icon = btn.querySelector('i');
            btn.classList.toggle('liked');
            icon.classList.replace(btn.classList.contains('liked') ? 'fa-regular' : 'fa-solid', btn.classList.contains('liked') ? 'fa-solid' : 'fa-regular');
        }

        function publishMeme() {
            const title = document.getElementById('memeTitle').value;
            const file = document.getElementById('memeFile').files[0];
            if(!title || !file) return alert("Preencha tudo!");

            const fd = new FormData();
            fd.append('title', title);
            fd.append('memeFile', file);

            fetch('upload.php', { method: 'POST', body: fd })
            .then(r => r.json())
            .then(d => {
                if(d.status === 'success') location.reload();
                else alert(d.message);
            });
        }
    </script>
